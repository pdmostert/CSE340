<% if (title) { %>
<!-- Page heading provided by the controller -->
<h1><%= title %></h1>
<% } else { /* If no title was provided, redirect back to the home page. This
keeps the view from rendering when required context isn't available. */
res.redirect('/') } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div id="registerFormContainer">
  <div>
    <p>All fields are required.</p>
  </div>
  <form id="updateForm" action="/inv/update" method="post">
    <div>
      <label for="classification_id">Classification:</label>
      <%- classificationSelect %>
    </div>

    <div>
      <label for="inv_make">Make:</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        value="<%= locals.inv_make %>"
        placeholder="Min of 3 characters"
      />
    </div>

    <div>
      <label for="inv_model">Model:</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        value="<%= locals.inv_model %>"
        placeholder="Min of 3 characters"
      />
    </div>

    <div>
      <label for="inv_description">Description:</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        placeholder="Enter a detailed description of the vehicle"
      >
<%= locals.inv_description %></textarea
      >
    </div>

    <div>
      <label for="inv_image">Image URL:</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>"
      />
    </div>

    <div>
      <label for="inv_thumbnail">Thumbnail URL:</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
      />
    </div>

    <div>
      <label for="inv_price">Price:</label>
      <input
        type="number"
        step="0.01"
        id="inv_price"
        name="inv_price"
        required
        value="<%= locals.inv_price %>"
        placeholder="decimal or integer"
      />
    </div>

    <div>
      <label for="inv_year">Year:</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        required
        value="<%= locals.inv_year %>"
        placeholder="4-digit year"
      />
    </div>

    <div>
      <label for="inv_miles">Miles:</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        required
        value="<%= locals.inv_miles %>"
        placeholder="digits only"
      />
    </div>

    <div>
      <label for="inv_color">Color:</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        value="<%= locals.inv_color %>"
      />
    </div>

    <button type="submit" disabled>Update Vehicle</button>

    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %> />
  </form>
</div>

<script src="../../js/inv-update.js"></script>
